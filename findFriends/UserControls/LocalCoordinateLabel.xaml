<UserControl x:Class="findFriends.UserControls.LocalCoordinateLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Width="32" Height="32">
	<Border x:Name="OuterBorder" BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="32" Background="#FFE0E0E0" CornerRadius="16" Padding="2">
		<Border x:Name="InnerBorder" Background="#FF217021" CornerRadius="16" BorderBrush="{Binding Background, ElementName=OuterBorder}"/>
	</Border>
</UserControl>